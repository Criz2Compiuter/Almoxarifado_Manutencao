@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroRepartição
@{
    ViewData["Title"] = "Create";
    var almoxarifadoId = ViewBag.AlmoxarifadoId;
}

<h1>@ViewData["Title"]</h1>

<h4>Prateleira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Repartição.Nome" class="control-label"></label>
                <input asp-for="Repartição.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Repartição.Almoxarifado" class="control-label"></label>
                <select asp-for="Repartição.AlmoxarifadoId" asp-items="@(new SelectList(Model.Almoxarifados, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" asp-route-almoxarifadoId="@almoxarifadoId" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div><a asp-action="Index" asp-route-almoxarifadoId="@almoxarifadoId" >Voltar para lista</a></div>
@section Scripts{
    @{
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}