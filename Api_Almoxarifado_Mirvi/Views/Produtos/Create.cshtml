@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroProduto
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Prateleira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text_danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.EnderecosId" class="control-label"></label>
                <input asp-for="Produto.EnderecosId" class="form-control" />
                <span asp-validation-for="Produto.EnderecosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.PrateleirasId" class="control-label"></label>
                <select asp-for="Produto.PrateleirasId" asp-items="@(new SelectList(Model.Prateleira, "Id", "Nome"))" class="form-control"></select>
                <span asp-validation-for="Produto.PrateleirasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}