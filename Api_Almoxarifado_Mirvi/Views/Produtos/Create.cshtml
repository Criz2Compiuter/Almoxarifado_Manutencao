@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroProduto
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Prateleira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Produto.Id" class="control-label"></label>
                <input asp-for="Produto.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.EnderecosId" class="control-label"></label>
                <input asp-for="Produto.EnderecosId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.PrateleirasId" class="control-label"></label>
                <input asp-for="Produto.PrateleirasId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>