@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroProduto
@using Api_Almoxarifado_Mirvi.Models.Enums
@{
    ViewData["Title"] = "Editar";
    var almoxarifadoId = ViewBag.AlmoxarifadoId;
}
<h1>@ViewData["Title"]</h1>
<h4>Produtos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Produto.Id" />
            <div asp-validation-summary="All" class="text_danger"></div>
            <div class="form-group">
                <label asp-for="Produto.Descricao" class="control-label"></label>
                <input asp-for="Produto.Descricao" class="form-control" />
                <span asp-validation-for="Produto.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Endereco" class="control-label"></label>
                <input asp-for="Produto.Endereco" class="form-control" />
                <span asp-validation-for="Produto.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Prateleiras" class="control-label"></label>
                <select asp-for="Produto.PrateleirasId" asp-items="@(new SelectList(Model.Prateleira, "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Produto.Categoria" class="control-label"></label>
                <input asp-for="Produto.Categoria" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Minimo" class="control-label"></label>
                <input asp-for="Produto.Minimo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Maximo" class="control-label"></label>
                <input asp-for="Produto.Maximo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Data" class="control-label"></label>
                <input asp-for="Produto.Data" class="form-control" />
                <span asp-validation-for="Produto.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto.CodigoDeCompra" class="control-label"></label>
                <input asp-for="Produto.CodigoDeCompra" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Local" class="control-label"></label>
                <input asp-for="Produto.Local" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Linha" class="control-label"></label>
                <input asp-for="Produto.Linha" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.C_STalisca" class="control-label"></label>
                <input asp-for="Produto.C_STalisca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Hpn" class="control-label"></label>
                <input asp-for="Produto.Hpn" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Referencia" class="control-label"></label>
                <input asp-for="Produto.Referencia" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.H225_H300" class="control-label"></label>
                <input asp-for="Produto.H225_H300" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Fornecedor" class="control-label"></label>
                <input asp-for="Produto.Fornecedor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Diametro" class="control-label"></label>
                <input asp-for="Produto.Diametro" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Comprimento" class="control-label"></label>
                <input asp-for="Produto.Comprimento" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Conexao" class="control-label"></label>
                <input asp-for="Produto.Conexao" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Medida" class="control-label"></label>
                <input asp-for="Produto.Medida" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Fabricante" class="control-label"></label>
                <input asp-for="Produto.Fabricante" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Marca" class="control-label"></label>
                <input asp-for="Produto.Marca" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.S_N" class="control-label"></label>
                <input asp-for="Produto.S_N" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Valor" class="control-label"></label>
                <input asp-for="Produto.Valor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Modelo" class="control-label"></label>
                <input asp-for="Produto.Modelo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Produto.Quantidade" class="control-label"></label>
                <input asp-for="Produto.Quantidade" class="form-control" />
                <span asp-validation-for="Produto.Quantidade" class="text-danger"></span>
            </div>
            @if (Model.IdAlmoxarifado == 2)
            {
                <div class="form-group">
                    <label asp-for="Produto.Maquina" class="control-label"></label>
                    <select asp-for="Produto.MaquinaId" asp-items="@(new SelectList(Model.Maquina, "Id", "Nome"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Corredor" class="control-label"></label>
                    <select asp-for="Produto.CorredorId" asp-items="@(new SelectList(Model.Corredor, "Id", "Descricao"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Almoxarifado" class="control-label"></label>
                    <select asp-for="Produto.AlmoxarifadoId" asp-items="@(new SelectList(Model.Almoxarifado.Where(a => a.Id == Model.IdAlmoxarifado), "Id", "Nome"))" class="form-control"></select>
                </div>
            }
            else if (Model.IdAlmoxarifado == 1)
            {
                <div class="form-group">
                    <label asp-for="Produto.Repartição" class="control-label"></label>
                    <select asp-for="Produto.RepartiçãoId" asp-items="@(new SelectList(Model.Repartição, "Id", "Nome"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Corredor" class="control-label"></label>
                    <select asp-for="Produto.CorredorId" asp-items="@(new SelectList(Model.Corredor, "Id", "Descricao"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Produto.Almoxarifado" class="control-label"></label>
                    <select asp-for="Produto.AlmoxarifadoId" asp-items="@(new SelectList(Model.Almoxarifado.Where(a => a.Id == Model.IdAlmoxarifado), "Id", "Nome"))" class="form-control"></select>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Salvar" asp-route-almoxarifadoId="@almoxarifadoId" class="btn btn-default" />
                <a asp-action="Index" asp-route-almoxarifadoId="@almoxarifadoId">Voltar para lista</a>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}