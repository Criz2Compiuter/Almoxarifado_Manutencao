@model Api_Almoxarifado_Mirvi.Models.Produto

<form method="post">
    <input asp-for="Id" hidden />
    <h3 class="mb-5">Detalhes do Produto</h3>
    <div class="row">
        <img src="data:image;base64,@Convert.ToBase64String(Model.FotoPDF)" alt="Foto do produto">
    </div>
    <div class="col-md-4">
        <h3>@Model.Descricao</h3>
        <p class="mb-4">@Model.CodigoDeCompra</p>
        <p class="mb-4 text-black">
            <b>
                @Model.Valor&nbsp;(@Model.Quantidade itens)
            </b>
        </p>
        <div class="row">
            <div class="col-5 col-md-5 mb-5">
                <a asp-action="Index" class="btn btn-outline-info">Voltar para lista</a>
            </div>
            <div class="col-5 col-md-5">
                <button type="submit" class="btn btn-outline-success">Adicionar ao Carrinho</button>
            </div>
        </div>
    </div>
</form>