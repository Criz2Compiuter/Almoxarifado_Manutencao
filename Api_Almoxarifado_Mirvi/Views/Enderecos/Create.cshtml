@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroEndereco
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Prateleira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Endereco.Id" class="control-label"></label>
                <input asp-for="Endereco.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Endereco.Nome" class="control-label"></label>
                <input asp-for="Endereco.Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <select asp-for="Endereco.PrateleirasId" asp-items="@(new SelectList(Model.Prateleira, "Id", "Descricao"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>