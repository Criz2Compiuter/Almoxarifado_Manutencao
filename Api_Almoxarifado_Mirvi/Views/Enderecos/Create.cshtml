@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroEndereco
@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Endereco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Endereco.Nome" class="control-label"></label>
                    <input asp-for="Endereco.Nome" class="form-control" />
                    <span asp-validation-for="Endereco.Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco.Prateleiras" class="control-label"></label>
                    <select asp-for="Endereco.PrateleirasId" asp-items="@(new SelectList(Model.Prateleira, "Id", "Nome"))" class="form-control"></select>
                </div>
            <div class="form-group">
                <label asp-for="Endereco.Corredor" class="control-label"></label>
                    <select asp-for="Endereco.CorredorId" asp-items="@(new SelectList(Model.Corredores, "Id", "Descricao"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Endereco.Almoxarifado" class="control-label"></label>
                    <select asp-for="Endereco.AlmoxarifadoId" asp-items="@(new SelectList(Model.Almoxarifados, "Id", "Nome"))" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </form>
    </div>
</div>
<div><a asp-action="Index">Voltar para lista</a></div>
@section Scripts{
    @{
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}