<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Almoxarifado Da Manutencao Mirvi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-flatly.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Api_Almoxarifado_Mirvi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" role="navigation">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mirvi Brasil</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="text-center">
                        <ul class="navbar-nav flex-grow-1">
                            <partial name="_LoginAdmin.cshtml" />
                            @if (ViewContext.RouteData.Values["action"].ToString() == "Login")
                            {
                                
                            }
                            else if (ViewContext.RouteData.Values["action"].ToString() == "MirviBrasil")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Almoxarifados" asp-action="Index" asp-route-almoxarifadoId="1">Almoxarifados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Repartições" asp-action="Index" asp-route-almoxarifadoId="1">Repartições</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Corredores" asp-action="Index" asp-route-almoxarifadoId="1">Corredores</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Prateleiras" asp-action="Index" asp-route-almoxarifadoId="1">Prateleiras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Index" asp-route-almoxarifadoId="1">Produtos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Buscas" asp-action="Index" asp-route-almoxarifadoId="1">Buscas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="TetraPak">Tetra Pak</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Historico">Historico</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
                                </li>
                            }
                            else if (ViewContext.RouteData.Values["action"].ToString() == "TetraPak")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Almoxarifados" asp-action="Index" asp-route-almoxarifadoId="2">Almoxarifados</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Maquinas" asp-action="Index" asp-route-almoxarifadoId="2">Maquinas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Corredores" asp-action="Index" asp-route-almoxarifadoId="2">Corredores</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Prateleiras" asp-action="Index" asp-route-almoxarifadoId="2">Prateleiras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Index" asp-route-almoxarifadoId="2">Produtos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MirviBrasil">Mirvi Brasil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Buscas" asp-action="Index">Buscas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Produtos" asp-action="Historico">Historico</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
                                </li>
                            }
                            else if (ViewContext.RouteData.Values["action"].ToString() != "Login")
                            {
                                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                    <ul class="nav navbar-nav">
                                        @await Component.InvokeAsync("CarrinhoCompraResumo")
                                    </ul>
                                </div>
                            }
                            else
                            {
                            }
                        </ul>
                    </div>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted container">
            <div class="container">
                &copy; Mirvi Brasil 2023 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Detalhes</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
</body>
</html>
