@model Api_Almoxarifado_Mirvi.Models.ViewModels.FormularioCadastroPrateleira
@{
    ViewData["Title"] = "Editar";
    var almoxarifadoId = ViewBag.AlmoxarifadoId;
}

<h1>@ViewData["Title"]</h1>

<h4>Prateleira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Prateleira.Id" />
            <div asp-validation-summary="All" class="text_danger"></div>
            <div class="form-group">
                <label asp-for="Prateleira.Nome" class="control-label"></label>
                <input asp-for="Prateleira.Nome" class="form-control" />
                <span asp-validation-for="Prateleira.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prateleira.Corredor" class="control-label"></label>
                <select asp-for="Prateleira.CorredorId" asp-items="@(new SelectList(Model.Corredores, "Id", "Descricao"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Prateleira.Almoxarifado" class="control-label"></label>
                <select asp-for="Prateleira.AlmoxarifadoId" asp-items="@(new SelectList(Model.Almoxarifados.Where(a => a.Id == Model.AlmoxarifadoId), "Id", "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" asp-route-almoxarifadoId="@almoxarifadoId" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<a asp-action="Index" asp-route-almoxarifadoId="@almoxarifadoId">Voltar para lista</a>
@section Scripts{
    @{
        { await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}