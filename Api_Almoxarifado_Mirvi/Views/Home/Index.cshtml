@model IEnumerable<Api_Almoxarifado_Mirvi.Models.Produto>
@{
    ViewData["Title"] = "Mirvi Brasil";
}

<div class="search-container text-center">
    <div class="search-box">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="MirviBrasil"><h1>Mirvi Brasil</h1></a>
        <input type="text" id="searchInput1" class="search-input" data-almoxarifado="1" onkeyup="searchProducts('searchInput1', 'search-results1')" placeholder="Pesquisar...">
        <div class="search-results" id="search-results1" style="display: none;">
            <table class="table tavle-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prateleiras)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Data)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                    </tr>
                </thead>
                <tbody id="productList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prateleiras.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="search-box">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="TetraPak"><h1>Tetra Pak</h1></a>
        <input type="text" id="searchInput2" class="search-input" data-almoxarifado="2" onkeyup="searchProducts('searchInput2', 'search-results2')" placeholder="Pesquisar...">
        <div class="search-results" id="search-results2" style="display: none;">
            <table class="table tavle-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Prateleiras)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Data)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                    </tr>
                </thead>
                <tbody id="productList">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Prateleiras.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#almoxarifadoId, #searchValue').on('change keyup', function () {
            searchProducts();
        });
    });

    function searchProducts() {
        var almoxarifadoId = $('#almoxarifadoId').val();
        var searchValue = $('#searchValue').val();

        $.ajax({
            url: '/Produtos/SearchByAlmoxarifado',
            type: 'GET',
            data: {
                almoxarifadoId: almoxarifadoId,
                searchValue: searchValue
            },
            success: function (data) {
                $('#productList').html(data);
            },
            error: function (error) {
                console.log(error);
            }
        });
    }
</script>
<style>
    .search-container {
        display: flex;
        justify-content: center;
        height: 70vh;
    }

    .search-box {
        margin: 0 10px;
        border: 5px solid #ccc;
        border-radius: 10px;
        padding: 5px;
    }

        .search-box h1 {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

    .search-input {
        padding: 10px;
        width: 500px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin: 30px 0 0;
    }

    .search-results {
        width: 500px;
        max-height: 500px;
        overflow-y: auto;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-top: 10px;
    }

        .search-results a {
            display: block;
            padding: 5px;
            text-decoration: none;
            color: #333;
        }

            .search-results a:hover {
                background-color: #f0f0f0;
            }
</style>
