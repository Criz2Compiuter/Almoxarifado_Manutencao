@model IEnumerable<IdentityUser>

<h2>Usuarios</h2>

@if (Model.Any())
{
    <table class="table table-sm table-borded table-bordered">
        <tr><th>ID</th>Nome</tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>
                    <form asp-action="EditUser" asp-route-id="@user.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-primary">
                            Gerenciar Claims
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
}